/* pages/detail/detail.wxss */

/* 头部样式 */

.item-header {
  padding: 60rpx 30rpx;
}

.item-header .item-title {
  font-size: 50rpx;
}

.item-header .item-detail {
  display: flex;
  justify-content: space-between;
  margin-top: 20rpx;
}

.item-detail .left-detail {
  flex: 1;
  margin-right: 20rpx;
}

.left-detail .item-rate {
  display: flex;
  justify-content: flex-start;
  align-items: center;
}

.item-rate .comment-person {
  margin-left: 20rpx;
  font-size: 24rpx;
  color: #ccc;
}

.left-detail .item-sub-detail {
  margin-top: 40rpx;
  font-size: 26rpx;
}

.item-sub-detail view {
  margin-bottom: 10rpx;
}

.item-detail .right-detail {
  width: 200rpx;
  height: 300rpx;
}

.right-detail image {
  width: 100%;
  height: 100%;
}

/* 标签样式 */

.item-tags {
  padding: 0rpx 30rpx;
}

.item-tags .item-tag-title {
  font-size: 28rpx;
  color: #b3b3b3;
}

.item-tags .item-tag-list {
  display: flex;
  justify-content: flex-start;
  flex-wrap: wrap;
}

.item-tag-list text {
  font-size: 28rpx;
  padding: 10rpx 20rpx;
  margin: 20rpx 20rpx 0 0;
  color: #353535;
  border-radius: 40rpx;
  text-align: center;
  background-color: #f5f5f5;
}

/* 评论样式 */

.comment-title {
  padding: 60rpx 0 0 30rpx;
  font-size: 28rpx;
  color: #b3b3b3;
}

.more-comment {
  text-align: center;
  font-size: 36rpx;
  color: #41be57;
  margin-bottom: 40rpx;
}
